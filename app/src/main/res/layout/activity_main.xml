<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="retu.currency_converter.MainActivity">

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Input amount"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConvertToINR"
        android:layout_alignBottom="@+id/buttonConvertToINR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Action1"
        android:text="BDT to Dollar" />



    <Button
        android:id="@+id/buttonConvertToBDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dollar to BDT"
        android:onClick="Action2"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/textViewOutput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonConvertToINR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="BDT to INR"
        android:onClick="Action3"

        android:layout_below="@+id/editTextInput"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonConvertToBDT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INR to BDT"
        android:onClick="Action4"

        android:layout_alignLeft="@+id/buttonConvertToINR"
        android:layout_alignStart="@+id/buttonConvertToINR"
        android:layout_alignBottom="@+id/buttonConvertToBDT" />



    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BDT TO GBP"
        android:onClick="Action5"
        android:layout_alignBaseline="@+id/buttonConvertToINR"
        android:layout_alignBottom="@+id/buttonConvertToINR"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GBP TO BDT"
        android:onClick="Action6"
        android:layout_alignBaseline="@+id/buttonConvertToBDT1"
        android:layout_alignBottom="@+id/buttonConvertToBDT1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output"
        android:textSize="30dp"

        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
